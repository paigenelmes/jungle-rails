<% #Partial for rendering each line item %>

<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <p><%= product.description %></p>
  </td>
  <td>
    <p>Quantity: <%= quantity %></p>
  </td>
  <td>
  <p>Product Total: <%= humanized_money_with_symbol product.price_cents / 100.00 %> </p>
  </td>
  <hr></hr>
</tr>